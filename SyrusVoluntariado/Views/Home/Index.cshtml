            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@vaga.Titulo</h5>
                    <p class="card-text">@vaga.Descricao</p>
                    <p class="card-text">@vaga.DataVaga.ToString("dd/MM/yyyy")</p>
                    <a href="#" class="btn " style="background-color: #62c0a3;"><b>Visualizar</b></a>
                </div>
            </div>
        </div>
    }

</div>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

