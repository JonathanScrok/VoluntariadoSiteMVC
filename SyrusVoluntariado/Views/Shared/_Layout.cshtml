@using Microsoft.AspNetCore.Http;

@{
    string Login = Context.Session.GetString("Login");
    string NomeUsuario = Context.Session.GetString("UsuarioLogado");
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light " style="background-color: #62c0a3; ">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Syrus Voluntariado</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="btn btn-outline-success w3-btn w3-round-large" href="/vaga/cadastrar">Criar Evento</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-success w3-btn w3-round-large" href="/vaga">Lista de Eventos</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link" href="/contato">Quem somos</a>
                            </li>*@
                    </ul>
                </div>
                @if (Login == null) {
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="btn btn-dark me-md-2" href="/login">Entrar</a>
                    </div>
                } else {
                    <div class="dropdown">
                        <a class="btn dropdown-toggle" href="#" role="button" id="Nome-UsuarioHeader" data-bs-toggle="dropdown" aria-expanded="false">
                            @NomeUsuario
                        </a>
                        <ul class="dropdown-menu" id="dropItens" aria-labelledby="dropdownMenuLink">
                            <li><a class="dropdown-item" id="MeuPerfilButton" href="/perfil">Meu Perfil</a></li>
                            <li><a class="dropdown-item" id="sairButton" href="/Login/logout">Sair</a></li>
                        </ul>
                    </div>
                }

            </div>
        </nav>
    </header>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Cookies</b></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <b>Cookies</b>: Guardamos estatísticas de visitas para melhorar sua experiência de navegação. Ao continuar, você concorda com nossa <a href="">política de privacidade</a>.
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" onclick="SalvarConcordancia();">Concordo</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade " id="confirmar-excluir" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Excluir Vaga</b></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Deseja mesmo excluir esta vaga?
                </div>
                <div class="modal-footer">
                    <a class="btn btn-danger" href="/vaga/excluir/@ViewBag.Id">Sim</a>
                    <a class="btn btn-secondary" onclick="FecharModal();">Cancelar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div>
            @RenderBody()
        </div>
    </div>

    @if (ViewBag.FooterPrecisa != false) {
        <footer id="footer-pai">
            <div class="b-example-divider"></div>
            <section class="footer ">
                <div class="py-3 my-4">
                    <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                        <li class="nav-item"><a href="/" class="nav-link px-2 text-muted"><b>Inicio</b></a></li>
                        <li class="nav-item"><a href="/vaga/cadastrar" class="nav-link px-2 text-muted"><b>Criar Vaga</b></a></li>
                        <li class="nav-item"><a href="/vaga" class="nav-link px-2 text-muted"><b>Eventos</b></a></li>
                        <li class="nav-item"><a href="" class="nav-link px-2 text-muted"><b>Sobre nós</b></a></li>
                    </ul>
                    <p class="text-center text-muted">Todos os direitos reservados &copy; 2021 - @DateTime.Now.Year</p>
                </div>
            </section>
        </footer>
    }

</body>
</html>
<script src="/css/layout.js"></script>