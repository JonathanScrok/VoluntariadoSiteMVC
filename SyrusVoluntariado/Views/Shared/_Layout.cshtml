@using Microsoft.AspNetCore.Http;
@{ 
    string Login = Context.Session.GetString("Login");
}

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
</head>
<body>

    <header>
        <!-- Menu -->
        <nav class="navbar navbar-expand-lg navbar-light " style="background-color: #62c0a3; ">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Syrus Voluntariado</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link " aria-current="page" href="/vaga/cadastrar">Criar Vaga</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/vaga">Lista de Eventos</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link" href="/contato">Quem somos</a>
                            </li>*@
                    </ul>
                </div>
                <!--TODO - Apresentar este menu apenas se o usuário tiver logado-->
                @if (Login != null) {
                    <div class="nav-item">
                        <a class="btn btn-success me-md-2" href="/meuperfil">Meu Perfil</a>
                    </div>
                }
                @if (Login == null) {
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="btn btn-dark me-md-2" href="/login">Login</a>
                    </div>
                } else {
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="btn btn-dark me-md-2" href="/Login/logout">Sair</a>
                    </div>
                }

            </div>
        </nav>
    </header>

    <!-- Button trigger modal -->
    @*<a data-bs-toggle="modal" id="cookies-click" data-bs-target="#exampleModal"> </a>

    <div class="container">
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Cookies</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <b>Cookies</b>: Guardamos estatísticas de visitas para melhorar sua experiência de navegação. Ao continuar, você concorda com nossa <a href="">política de privacidade</a>.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="concordei">Concordo</button>
                    </div>
                </div>
            </div>
        </div>
    </div>*@
    <!-- Modal -->



    <div class="container">
        <div>
            <!-- Conteúdo - Página -->
            @RenderBody()
        </div>
        <footer>
            <!-- Footer -->
            <div class="row"></div>
            <div class="col-sm-12">
                Todos os direitos reservados &copy; 2020 - @DateTime.Now.Year
            </div>
        </footer>
    </div>
</body>
</html>
<script src="/css/layout.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>