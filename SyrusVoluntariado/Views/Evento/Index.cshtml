@model X.PagedList.IPagedList<BeaHelper.BLL.Models.Evento>
@using X.PagedList.Mvc.Core;
@using X.PagedList;


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Eventos - Listagem";
}

<div class="mt-md-3">
    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Mensagem"]
        </div>
    }
</div>
<div class="mt-md-3">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alertemail" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
</div>
<link href="/css/PagedList.css" rel="stylesheet" type="text/css" />
<link href="/css/FundoPaginas.css" rel="stylesheet" type="text/css" />

<div>
    <div id="PaiFiltro">
        <div>
            <div>Filtrar por</div>
            <form action="/Evento/FiltrarEvento" method="post">
                <div style="width: 100%; display: flex; flex-direction: column; justify-content: space-between;">
                    <div class="form-group" id="CamposForm" style="display: flex; flex-direction: row; max-width: 300px; margin: 10px; ">
                        <label class="control-label" id="labelsAddMeme" style="margin-right: 10px;">Titulo</label>
                        <input type="text" name="titulo" id="filtroTitulo" value="" />
                    </div>
                    <div class="form-group" id="CamposForm" style="display: flex; flex-direction: row; max-width: 300px; margin: 10px; ">
                        <label class="control-label" id="labelsAddMeme" style="margin-right: 10px;">Descrição</label>
                        <input type="text" name="descricao" id="filtroDescricao" value="" />
                    </div>
                    <div class="form-group" id="CamposForm" style="display: flex; flex-direction: row; max-width: 300px; margin: 10px; ">
                        <label class="control-label" id="labelsAddMeme" style="margin-right: 10px;">Categoria</label>
                        <div class="options">
                            <select class="form-select" id="filtroCategoria" aria-label="Default select example">
                                <option value="" selected>Selecione</option>
                                <option value="Nenhum">Nenhum</option>
                                <option value="Alimentação">Alimentação</option>
                                <option value="Tecnologia">Tecnologia</option>
                                <option value="Entrega">Entrega</option>
                                <option value="Serviços Gerais">Serviços Gerais</option>
                                <option value="Outro">Outro</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group" id="CamposForm" style="display: flex; flex-direction: row; max-width: 300px; margin: 10px; ">
                        <label class="control-label" id="labelsAddMeme" style="margin-right: 10px;">Local</label>
                        <input type="text" name="local" id="filtroLocal" value="" />
                    </div>
                    <div class="form-group" id="CamposForm" style="display: flex; flex-direction: row; max-width: 300px; margin: 10px; ">
                        <label class="control-label" id="labelsAddMeme" style="margin-right: 10px;">Eventos Nunca Voluntariados</label>
                        <input type="checkbox" name="local" id="filtroNuncaVoluntariado" value="" />
                    </div>
                    <div class="form-group" id="CamposForm" style="display: flex; flex-direction: row; max-width: 300px; margin: 10px; ">
                        <label class="control-label" id="labelsAddMeme" style="margin-right: 10px;">Eventos Já Voluntariados</label>
                        <input type="checkbox" name="local" id="filtroJaVoluntariado" value="" />
                    </div>
                    <div class="form-group" id="CamposForm" style="display: flex; flex-direction: row; max-width: 300px; margin: 10px; ">
                        <button class="btn btn-info" onclick="FuncFiltrar();">Filtrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div id="PaiTabEventos">
        <div>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Titulo</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Local</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evento in Model)
                    {
                        <tr>
                            <th scope="row">@evento.Titulo</th>
                            <td>@evento.Descricao</td>
                            <td>@evento.Categoria</td>
                            <td>@evento.Cidade_Estado</td>
                            <td>
                                <a href="/evento/visualizar/@evento.Id_Evento" class="btn btn-light">Visualizar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<script src="~/js/funcoes.js"></script>

