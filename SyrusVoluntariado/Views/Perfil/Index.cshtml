    <nav>
        <div class="nav nav-tabs CorTabs" id="nav-tab" role="tablist">
            <button class="nav-link CorTabs active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true"><strong>Meus Dados</strong></button>
            <button class="nav-link CorTabs" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"><strong>Meus Eventos</strong> </button>
            <button class="nav-link CorTabs" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false"><strong>Eventos Voluntariados</strong></button>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active perfil-infos" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <table class="table table-borderless" id="fontePerfil">
                <tbody>
                    <tr>
                        <th scope="row">Nome</th>
                        <td>@Model.Nome</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th scope="row">Sexo</th>
                        <td>@ViewBag.UsuarioSexo</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="row">
                @foreach (var vaga in @ViewBag.VagasCandidatas)
                {
                    ViewBag.Id = vaga.Id_Vaga;
                    <div class="col-sm-6 mt-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@vaga.Titulo</h5>
                                <p class="card-text">@vaga.Descricao</p>
                                @if (@vaga.DataEvento == null)
                                {
                                    <p class="card-text">Data: Não escolhida</p>
                                }
                                else
                                {
                                    <p class="card-text">Data: @vaga.DataEvento.ToString("dd/MM/yyyy")</p>
                                }

                                <a href="/vaga/listavoluntarios/@vaga.Id_Vaga" class="btn " style="background-color: #62c0a3;"><b>Lista de Voluntários</b></a>
                                <div style="float:right;">
                                    <a class="btn btn-info" href="/vaga/editar/@vaga.Id_Vaga">Editar</a>
                                    <a class="btn btn-danger ms-md-2" onclick="ConfirmacaoExcluirVaga();">Excluir</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
            @*<span> <b>Eventos:</b> @ViewBag.MinhasVagas.Count</span>*@
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Titulo</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Local</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vaga in @ViewBag.MinhasVagas)
                    {
                        <tr>
                            <th scope="row">@vaga.Titulo</th>
                            <td>@vaga.Descricao</td>
                            <td>@vaga.Categoria</td>
                            <td>@vaga.CidadeEstado</td>
                            <td>
                                <a href="/vaga/visualizar/@vaga.IdVaga" class="btn btn-light">Visualizar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

