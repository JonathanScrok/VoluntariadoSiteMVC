@model SyrusVoluntariado.Models.Usuario
@{
    //Layout = "_Layout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Cadastrar-se";
}



<link href="/css/login.css" rel="stylesheet" type="text/css" />
<link href="/css/FundoPaginas.css" rel="stylesheet" type="text/css" />

<form method="post" action="/login/cadastrarusuario">

    <div class="row g-2 mt-md-1">
        <section class="login-pai">
            <div class="cadastro__filho">
                <div class="col-md">
                    <div class="botoes-entrar">
                        <div class="btn-group mb-md-3">
                            <a href="" aria-current="page" class="btn btn-primary active" id="ativobotao">Cadastrar-se</a>
                            <a href="/login" class="btn btn-primary" id="cadastroLogin">Entrar</a>
                        </div>
                    </div>
                    <input type="hidden" name="id" value="@Model.Id" />
                    @if (TempData["MensagemErro"] != null) {
                        <div class="alert alert-danger alertemail" role="alert">
                            @TempData["MensagemErro"]
                        </div>
                    }
                    <div class="form-floating">
                        <input type="text" name="nome" value="@Model.Nome" class="form-control" id="nome" placeholder="Nome">
                        <label for="nome">Nome Completo:</label>
                        @Html.ValidationMessage("nome")
                    </div>
                    <div class="form-floating mt-md-3">
                        <input type="text" name="sexo" value="@Model.Sexo" class="form-control" id="sexo" placeholder="sexo">
                        <label for="sexo">Sexo:</label>
                        @Html.ValidationMessage("sexo")
                    </div>
                    <div class="form-floating mt-md-3">
                        <input type="text" name="email" value="@Model.Email" class="form-control" id="email" placeholder="Exemplo@exemplo.com">
                        <label for="email">Email:</label>
                        @Html.ValidationMessage("email")
                    </div>
                    <div class="form-floating mt-md-3">
                        <input type="password" name="senha" value="@Model.Senha" class="form-control" id="senha" placeholder="Senha">
                        <label for="senha">Senha:</label>
                        @Html.ValidationMessage("senha")
                    </div>
                    <div class="botaologar">
                        <button type="submit" class="btn btn-success mt-md-2">Cadastrar</button>
                    </div>
                </div>
            </div>

        </section>
    </div>


</form>

@ViewBag.Mesagem
